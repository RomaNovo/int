extends ../main/base

block variables
	-let title = 'Reg';

mixin item( text,imageName,className,src )
	.elm__item
		img(src=imageName, alt='' ,title='').elm__item--img
		.elm__item--text()=text
		div(class=className).elm__item--check
			img.elm__item--checked(src= `images/${src}.png`)

block content
	.reg
		.reg__inner.inner
			.reg__skill-blocks 
				.skill-blocks.skill-blocks_active.skill-blocks1(data-num = '0')
					+headline({size: 'medium', align: 'center'}).skill-blocks__headline Intellecto повысит
